#include<iostream>
#include<conio.h>
using namespace std;
int main()
{
	int a,b,c;
	cout<<"Enter Temperature : ";
	cin>>a;
	if(a>=40)
	{
		cout<<"Today is very hot : "<<a;
	}
	else if (a>=30)
	{
		cout<<"Today is hot  : "<<a;
	}
	else if (a>=17)
	{
		cout<<"Today is normal  : "<<a;
	}
	else if (a>=9)
	{
		cout<<"Today is cold : "<<a;
	}
		else
	{
		cout<<"Today is very cold : "<<a;
	}
	return 0;
}
